<!DOCTYPE html>
<html lang="Eng">
<head>
    <title>Customer Complaints</title>
    <link rel="stylesheet" href="/style.css">
    <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0px;
      background-color: gray ;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    form {
      max-width: 500px;
      margin: 20px auto;
      padding: 20px;
      border: 1px solid #ccc;
      background-color: #fff;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      width: 100%;
    }

    .form-inputs {
      width: 95%;
    }

    label, input, textarea, select {
      display: block;
      margin-bottom: 10px;
    }

    input[type="text"],
    input[type="email"],
    input[type="tel"],
    textarea,
    select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    input[type="submit"] {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

	 textarea#complaint {
      height: 100px; /* Specify a desired height */
      resize: vertical; /* Allow vertical resizing if needed */
    }

    input[type="submit"]:hover {
      background-color: #45a049;
    }

    .success-message {
      color: green;
      margin-top: 10px;
    }

    .error-message {
      color: red;
      margin-top: 10px;
    }

    body {
      font-family: Arial, sans-serif;
     margin: 0;
     padding: 0px;
     background: linear-gradient(to right, white, lightblue, blue, cyan, green, orange);
    }

    header{
      background: linear-gradient(to right, white, lightblue, blue, cyan, green, orange);
    }
    header a{
      background-color: transparent;
    }
  </style>
</head>
<body>
  <header>
    <nav>
        <h4><li><a href="/">Sal's Brukina</a></li></h4>
        <ul>
            <% if(!currentUser){ %>
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Sign Up</a></li>
            <li><a href="/secret">Customer Interface</a></li>
            <% } else { %>
            <li><a href="#">Sign In As <%= currentUser.username %></a></li>
            <li><a href="/secret">Customer Interface</a></li>
            <li><a href="/logout">LogOut</a></li>
            <% } %>
        </ul>
    </nav>
</header>
<h1>Customer Complaints</h1>

<form id="complaintForm">
    <div class="form-inputs">
        <label for="name">Name:</label>
        <input type="text" id="name" required>

        <label for="email">Email:</label>
        <input type="email" id="email" required>

        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" required>

        <label for="subject">Subject:</label>
        <input type="text" id="subject" required>

        <label for="region">Location:</label>
        <select id="region" required>
            <option value="" disabled selected>Select Region</option>
            <option value="Ashanti Region">Ashanti Region</option>
            <option value="Bono East Region">Bono East Region</option>
            <option value="Bono Region">Bono Region</option>
            <option value="Central Region">Central Region</option>
            <option value="Eastern Region">Eastern Region</option>
            <option value="Greater Accra Region">Greater Accra Region</option>
            <option value="Ahafo Region">Ahafo Region</option>
            <option value="North East Region">North East Region</option>
            <option value="Northern Region">Northern Region</option>
            <option value="Oti Region">Oti Region</option>
            <option value="Savannah Region">Savannah Region</option>
            <option value="Upper East Region">Upper East Region</option>
            <option value="Upper West Region">Upper West Region</option>
            <option value="Volta Region">Volta Region</option>
            <option value="Western North Region">Western North Region</option>
            <option value="Western Region">Western Region</option>
        </select>

        <label for="complaint">Complaint:</label>
        <textarea id="complaint" rows="4" required></textarea>
    </div>

    <input type="submit" value="Submit Complaint">
</form>

<script>
    document.getElementById("complaintForm").addEventListener("submit", function(event) {
      event.preventDefault();

      var name = document.getElementById("name").value;
      var email = document.getElementById("email").value;
      var phone = document.getElementById("phone").value;
      var region = document.getElementById("region").value;
      var complaint = document.getElementById("complaint").value;

      // You can add additional validation here if needed

      // Simulating successful submission
      if (name && email && phone && region && complaint) {
        alert("Submitted successfully.\nThank you!");

        // Clear the form
        document.getElementById("complaintForm").reset();
      } else {
        alert("Submission failed.");
      }
    });
  </script>
</body>
</html>
